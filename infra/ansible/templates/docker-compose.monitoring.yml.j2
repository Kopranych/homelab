---
# ==============================================================================
# Monitoring Stack Docker Compose Configuration
# ==============================================================================
# TIG Stack: Telegraf + InfluxDB + Grafana
# Auto-generated by Ansible - DO NOT EDIT MANUALLY
# ==============================================================================

version: '3.8'

services:
  # ============================================================================
  # InfluxDB - Time Series Database
  # ============================================================================
  influxdb:
    image: {{ monitoring.influxdb.image }}
    container_name: monitoring-influxdb
    restart: unless-stopped
    ports:
      - "{{ monitoring.influxdb.port }}:8086"
    environment:
      # Initial setup
      DOCKER_INFLUXDB_INIT_MODE: setup
      DOCKER_INFLUXDB_INIT_USERNAME: {{ monitoring.influxdb.admin_user }}
      DOCKER_INFLUXDB_INIT_PASSWORD: {{ monitoring.influxdb.admin_password }}
      DOCKER_INFLUXDB_INIT_ORG: {{ monitoring.influxdb.organization }}
      DOCKER_INFLUXDB_INIT_BUCKET: {{ monitoring.influxdb.bucket }}
      DOCKER_INFLUXDB_INIT_RETENTION: {{ monitoring.influxdb.retention }}
      DOCKER_INFLUXDB_INIT_ADMIN_TOKEN: {{ influxdb_token }}
    volumes:
      - {{ monitoring.data_root }}/influxdb:/var/lib/influxdb2
    networks:
      - monitoring
    healthcheck:
      test: ["CMD", "influx", "ping"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  # ============================================================================
  # Telegraf - Metrics Collector
  # ============================================================================
  telegraf:
    image: {{ monitoring.telegraf.image }}
    container_name: monitoring-telegraf
    restart: unless-stopped
    depends_on:
      - influxdb
    environment:
      HOST_PROC: /host/proc
      HOST_SYS: /host/sys
      HOST_ETC: /host/etc
      HOST_MOUNT_PREFIX: /host
    volumes:
      # Telegraf configuration
      - {{ monitoring.compose_dir }}/telegraf.conf:/etc/telegraf/telegraf.conf:ro

      # Host system metrics
      - /:/host:ro
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
      - /etc:/host/etc:ro
      - /var/run/utmp:/var/run/utmp:ro

      # Docker socket for container metrics
      - /var/run/docker.sock:/var/run/docker.sock:ro
    networks:
      - monitoring
    # Run as root with docker group to access Docker socket
    user: "0:{{ docker_group_id }}"

  # ============================================================================
  # Grafana - Visualization & Alerting
  # ============================================================================
  grafana:
    image: {{ monitoring.grafana.image }}
    container_name: monitoring-grafana
    restart: unless-stopped
    depends_on:
      - influxdb
    ports:
      - "{{ monitoring.grafana.port }}:3000"
    environment:
      # Admin credentials
      GF_SECURITY_ADMIN_USER: {{ monitoring.grafana.admin_user }}
      GF_SECURITY_ADMIN_PASSWORD: {{ monitoring.grafana.admin_password }}

      # Server settings
      GF_SERVER_ROOT_URL: http://localhost:{{ monitoring.grafana.port }}
      GF_SERVER_SERVE_FROM_SUB_PATH: false

      # Anonymous access (disabled)
      GF_AUTH_ANONYMOUS_ENABLED: false

      # Disable Grafana analytics
      GF_ANALYTICS_REPORTING_ENABLED: false
      GF_ANALYTICS_CHECK_FOR_UPDATES: false

      # Enable provisioning
      GF_PATHS_PROVISIONING: /etc/grafana/provisioning

      # Install plugins
      GF_INSTALL_PLUGINS: ""

      # Alerting (only unified alerting in Grafana 10+)
      GF_ALERTING_ENABLED: false
      GF_UNIFIED_ALERTING_ENABLED: true

    volumes:
      # Data persistence
      - {{ monitoring.data_root }}/grafana:/var/lib/grafana

      # Provisioning
      - {{ monitoring.compose_dir }}/grafana-provisioning/datasources:/etc/grafana/provisioning/datasources:ro
      - {{ monitoring.compose_dir }}/grafana-provisioning/dashboards:/etc/grafana/provisioning/dashboards:ro
{% if monitoring.telegram.enabled and monitoring.telegram.bot_token != '' %}
      - {{ monitoring.compose_dir }}/grafana-provisioning/alerting:/etc/grafana/provisioning/alerting:ro
{% endif %}

      # Dashboard JSON files
      - {{ monitoring.compose_dir }}/dashboards:/var/lib/grafana/dashboards:ro

    networks:
      - monitoring
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3000/api/health || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    user: "{{ ansible_user_uid }}:{{ ansible_user_gid }}"

# ==============================================================================
# Networks
# ==============================================================================
networks:
  monitoring:
    name: monitoring
    driver: bridge

