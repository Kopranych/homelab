apiVersion: 1

contactPoints:
  - orgId: 1
    name: telegram-homelab
    receivers:
      - uid: tg-homelab
        type: telegram
        settings:
          bottoken: "{{ monitoring.telegram.bot_token }}"
          chatid: "{{ monitoring.telegram.chat_id }}"
          message: |
            {% raw %}{{ .Status | toUpper }}: {{ .CommonLabels.alertname }}
            {{ range .Alerts }}
            {{ if .Labels.container_name }}Container: {{ .Labels.container_name }}{{ end }}
            {{ .Annotations.summary }}
            {{ .Annotations.description }}
            {{ end }}{% endraw %}
        disableResolveMessage: false
