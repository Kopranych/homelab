# ==============================================================================
# Traefik Dynamic Configuration - Tailscale HTTPS Certificates
# ==============================================================================
# Generated by Ansible - DO NOT EDIT MANUALLY
#
# This configuration tells Traefik to use Tailscale-provided certificates
# for HTTPS connections.
# ==============================================================================

tls:
  certificates:
    - certFile: /certs/{{ tailscale_hostname }}.crt
      keyFile: /certs/{{ tailscale_hostname }}.key
      stores:
        - default

  stores:
    default:
      defaultCertificate:
        certFile: /certs/{{ tailscale_hostname }}.crt
        keyFile: /certs/{{ tailscale_hostname }}.key
